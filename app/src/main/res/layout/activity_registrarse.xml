<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_top"
    android:orientation="vertical"
    tools:context=".Login.Activities.Registrarse">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="110dp"
            android:paddingBottom="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:letterSpacing="0.03"
            android:text="Registrarte"
            android:fontFamily="@font/avenirltstd"
            android:textColor="#fc4444"
            android:textSize="30sp"
             />




    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="0dp"
        android:letterSpacing="0.03"
        android:text="Regístrate con tu número de celular"
        android:textColor="#000"
        android:fontFamily="@font/roman"
        android:textSize="15sp"
         />

    <ImageView
        android:visibility="gone"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:background="@drawable/signup"
        android:layout_gravity="center"/>



    <EditText
        android:id="@+id/nombre_re"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/sign"
        android:hint="Nombre"
        android:textColor="#000"
        android:elevation="12dp"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/apellido_re"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:elevation="12dp"
        android:background="@drawable/sign"
        android:hint="Apellido"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/telefono_re"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/sign"

        android:elevation="12dp"
        android:hint="Teléfono"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/email_re"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/sign"
        android:elevation="12dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/password_re"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/sign"
        android:elevation="12dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acepto Políticas de"
            android:textSize="15dp"
            android:fontFamily="@font/roman"
            android:layout_marginLeft="27dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"/>
        <TextView
            android:id="@+id/goLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" tratamiento de datos"
            android:textSize="15dp"
            android:fontFamily="@font/avenirltstd"
            android:textColor="#fc4444"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></CheckBox>


    </LinearLayout>

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button"
        android:fontFamily="@font/roman"
        android:text="ENVIAR"
        android:textColor="#fff"/>


    


</LinearLayout>