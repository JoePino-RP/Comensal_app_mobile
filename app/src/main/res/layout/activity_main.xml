<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_top"
    android:orientation="vertical"
    tools:context=".Login.Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="110dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="45dp"
            android:letterSpacing="0.03"
            android:text="COMENSALES"
            android:textColor="#707070"
            android:textSize="30sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        android:letterSpacing="0.03"
        android:text="Bienvendido"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="376dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/sign"
        android:elevation="12dp"
        android:hint="Email"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/passwordTxt"
        android:layout_width="376dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign"
        android:elevation="12dp"
        android:hint="Password"
        android:paddingLeft="20dp" />

    <TextView
        android:id="@+id/buttonForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olvidé mi Contraseña"
        android:textStyle="italic"
        android:textSize="17dp"
        android:textColor="#000"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginRight="22dp"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="376dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:background="@drawable/button"
        android:text="Entrar"
        android:textColor="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="o ingresar con"
        android:textAlignment="center"
        android:textSize="16dp"
        android:layout_marginTop="28dp"
        android:textColor="#000"></TextView>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/gmail"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="1dp"


            android:background="@drawable/gmail"
            android:textColor="#fff" />

        <Button
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="1dp"

            android:background="@drawable/facebook"
            android:textColor="#fff" />



    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No tengo una Cuenta, "
            android:textSize="18dp"
            android:layout_marginLeft="35dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/goRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="registrarme "
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/red"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"/>

    </LinearLayout>



</LinearLayout>