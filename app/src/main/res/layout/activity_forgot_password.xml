<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/main_top"
    tools:context=".Login.Activities.forgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="126dp"
            android:layout_height="157dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECUPERAR CONTRASEÑA"
            android:textSize="30sp"
            android:textColor="#68329b"
            android:letterSpacing="0.03"
            android:fontFamily="@font/avenirltstd"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="0dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="@drawable/signup"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/emailRestoreTxt"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/sign"
        android:hint="Ingresa Email, te enviaremos pass"
        android:paddingLeft="20dp"
        android:fontFamily="@font/roman"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>




    <Button
        android:id="@+id/restoreBtn"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Recuperar Contraseña"
        android:background="@drawable/button"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/goInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vuelve a Iniciar Sesión"
        android:textSize="18dp"
        android:fontFamily="@font/roman"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>